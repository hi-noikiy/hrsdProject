.Login_main {
  background: #252732;
  text-align: center;
}
.Login_main .item {
  width: 420px;
  margin: 0 auto;
}
.Login_main .item input {
  width: 100%;
  line-height: 1.125rem;
  padding: 8px 0;
  font-size: 1rem;
  background: none;
  outline: none;
  border: none;
  border-bottom: 1px solid #495057;
  font-size: 18px;
  margin-bottom: 30px;
  color: #ccc !important;
}
.Login_main .item input:focus {
  transition: 0.5s;
  border-bottom: 1px solid #17a7f3;
}
.Login_main .item .user {
  margin-top: 50px;
}
.Login_main .item .forget_password {
  text-align: right;
  margin: 30px 0 60px;
}
.Login_main .item .forget_password a {
  font-size: 18px;
  color: #17a7f3;
}
.Login_main .item .btn {
  padding-bottom: 60px;
}
.Login_main .item .btn a {
  font-size: 18px;
  color: #17a7f3;
  border: 1px solid #17a7f3;
  border-radius: 5px;
  line-height: 42px;
  display: inline-block;
  width: 100%;
}
